<view class="user_info_wrap">
  <view wx:if="{{user.tel}}" class="user_img_wrap">
    <image class="user_bg" mode="heightFix" src="https://img0.baidu.com/it/u=3851903985,2610859184&fm=253&fmt=auto&app=120&f=JPEG?w=1280&h=800"></image>
    <button class="logout" bindtap="logout">退出</button>
    <button class="updata" bindtap="updata">设置</button>
    <view class="user_info">
      <image class="user_icon" mode="aspectFill" src="https://i.postimg.cc/QMYZ65rk/680a282b5ce4df5db9e3a5f1e677a34c.jpg"></image>
      <view class="user_name">工程商家</view>
    </view>
  </view>
  <view wx:else class="user_btn">
    <navigator url="/pages/login/index">登录</navigator>
  </view>
</view>
<view class="user_content">
  <view class="user_main">
    <view class="app_info_wrap">
      <view class="app_info_item app_inf_contact">
        <text>联系客服</text>
        <text>400-218-4000</text>
      </view>
      <navigator class="app_info_item" url="/pages/feedback/index">意见反馈</navigator>
      <view class="app_info_item">关于我们</view>
    </view>
    <view class="recommend_wrap" bindtap="onClick">把应用推荐给其他人</view>
  </view>
  <van-share-sheet show="{{ showShare }}" title="立即分享给好友" options="{{ options }}" bind:select="onSelect" bind:close="onClose" />
  <van-toast id="van-toast" />
</view>