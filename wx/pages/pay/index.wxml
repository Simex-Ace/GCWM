<!--收货地址-->
<view class="receive_address_row">
  <view class="user_info_row" wx:if="{{defaultAddress[0].address}}">
    <view class="user_info">
      <view class="user_address">{{defaultAddress[0].address}}</view>
      <view class="user_name">{{defaultAddress[0].name}}</view>
      <view class="user_phone">{{defaultAddress[0].phone}}</view>
      <view class="user_time">预计{{to_time}}送达</view>
      <image src="/icons/single.png" mode="aspectFit" class="address" bindtap="tochange" />
    </view>
  </view>
  <button class="addaddress" bindtap="tochange" wx:else>添加地址</button>
</view>
<!--购物车内容-->
<view class="cart_content">
  <view class="cart_title">{{mychoice[mychoice.length-2][0].name}}</view>
  <view class="cart_main">
    <view class="cart_item" wx:for="{{myfoods}}" wx:key="goods_id">
      <navigator class="cart_img_wrap">
        <image mode="widthFix" class="food_img" src="{{item.img}}"></image>
      </navigator>
      <view class="cart_info_wrap">
        <view class="goods_name">{{item.name}}</view>
        <view class="goods_price_wrap">
          <view class="goods_style">{{item.choiceSize}}</view>
          <view class="goods_price">￥{{item.price}}</view>
          <view class="cart_num_tool">
            <view class="goods_num">x {{item.num}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<view>
  <text class="note">备注</text>
  <input class="note_content" type="text" placeholder="请填写口味偏好" bindinput="getNote"/>
</view>
<view class='container'>
  <modal title="请打开支付宝扫码支付" hidden="{{modalHidden}}" bindconfirm="modalConfirm" bindcancel="modalCandel">
    <view class="modal-content">
      <!-- <image class="image" src="../../icons/zsm.png" mode='widthFix'></image> -->
      <canvas class="qrcode" canvas-id="mycanvas"></canvas>
    </view>
  </modal>
</view>

<!--底部工具栏-->
<view class="footer_tool">
  <view class="total_price_wrap">
    <view class="total_price">
      合计:<text class="total_price_text">￥{{mychoice[mychoice.length-1]}}</text>
    </view>
    <view>包含配送费</view>
  </view>
  <!-- <web-view wx:if="false" src="http://kdst:8076/order/pay"></web-view> -->
  <view class="order_pay_wrap" bindtap="buttonTap">
    提交订单
  </view>
</view>