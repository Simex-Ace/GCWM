.main {
  position: absolute;
  height: 100%;
  width: 100%;
  /* border-style: solid; */
}

.head {
  position: relative;
  text-align: center;
  align-items: center;
  height: 5%;
  top: 1%;
  /* border-style: solid; */
}

.my_address {
  font-size: 18px;
  font-family: '幼圆';
}

.scroll {
  height: 1200rpx;
}

.edit-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 30px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  z-index: 6;
  width: 80%;
  max-width: 500px;
}

.edit-dialog-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 10px;
}

.edit-dialog-input {
  width: 100%;
  height: 40px;
  margin-bottom: 10px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

.edit-dialog-btn {
  width: 100%;
  height: 40px;
  line-height: 230%;
  background-color: #0578f3;
  color: #fff;
  border-radius: 5px;
  font-size: 16px;
  margin-top: 10px;
}

.address-item {
  background-color: #fff;
  position: relative;
  margin-top: 2%;
  width: 98%;
  left: 1%;
  right: 1%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, .2);
  border-radius: 8px;
  padding: 2%;
}

.edit-btn {
  position: absolute;
  top: 10%;
  right: 15%;
  width: 35px;
  height: 25px;
  padding: 5px;
  font-size: 11px;
  border-radius: 5px;
  color: rgb(0, 0, 0);
  background-color: rgb(107, 252, 94);
  /* border-style: solid; */
}

.dele-btn {
  position: absolute;
  top: 10%;
  right: 1%;
  width: 35px;
  height: 25px;
  padding: 5px;
  font-size: 11px;
  border-radius: 5px;
  color: rgb(255, 255, 255);
  background-color: rgb(255, 83, 83);
  /* border-style: solid; */
}

.stat-btn {
  position: absolute;
  top: 55%;
  right: 1%;
  width: 23%;
  height: 25px;
  padding: 5px;
  font-size: 11px;
  border-radius: 5px;
  letter-spacing: 1.5px;
  color: rgb(25, 32, 43);
  background-color: rgb(245, 155, 53);
}

.default{
  position: absolute;
  /* border-style: solid; */
  top: 55%;
  right: 1%;
  width: 23%;
  height: 25px;
 font-size: 12px;
  border-radius: 5px;
  padding: 0.5%;
  letter-spacing: 1.5px;
  color: rgb(25, 32, 43);
  background-color: rgb(201, 235, 80);
}
.default_t{
  position: absolute;
  line-height: 170%;
}

.address-info {
  width: 75%;
  overflow: hidden;
  text-overflow: ellipsis;
  /* border-style: solid; */
}

.address-name {
  font-size: 17px;
  font-weight: 400;
  margin-right: 10px;
}

.address-phone {
  font-size: 13px;
  font-weight: 200;
  color: #999;
}

.address-detail {
  font-size: 13px;
  font-weight: 200;
  color: #999;
  margin-top: 5px;
}

.add {
  width: 50%;
  position: fixed;
  height: 34px;
  bottom: 44px;
  text-align: center;
  left: 25%;
  right: 25%;
  line-height: 180%;
  color: white;
  font-size: large;
  background-color: rgb(21, 165, 248);
  font-family: '仿宋';
  border-radius: 10px;
}